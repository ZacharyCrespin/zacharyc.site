---
title: Photography
description: Photography
id: photography
layout: default.webc
---
<section class="page-section" aria-label="Featured Collections">
  <h2>Featured Collections</h2>
  <div class="cards small">
    {%- for collection in collections.collection | sort('featuredOrder') -%}
    {% if collection.data.featured %}
    <a class="card" href="{{ collection.url }}" aria-label="{{ collection.data.title }}">
      {% image collection.data.img, collection.data.title + " Collection Image", "small", "(max-width: 600px) 100vw, (max-width: 900px) 50vw, (max-width: 1200px) 33vw, 24vw" %}
      <h3>{{ collection.data.title }}</h3>
      <p>{{ collection.data.numberofphotos }} Photos</p>
      <span class="button">View</span>
    </a>
    {% endif %}
    {%- endfor -%}
  </div>
  <a class="button center" href="/photography/collections/">More Collections</a>
</section>

<section class="page-section" aria-label="Featured Photos">
  <h2>Featured Photos</h2>
  <div class="gallery" aria-label="Gallery">
    {%- for photo in collections.photo | sort('featuredOrder') -%}
    {% if photo.data.featured %}
    <a class="photo" href="/photography/{{ photo.data.id }}/">
      {% image photo.data.src, photo.data.alt, "small", "(max-width: 600px) 100vw, (max-width: 900px) 50vw, 33vw" %}
    </a>
    {% endif %}
    {%- endfor -%}
  </div>
</section>
