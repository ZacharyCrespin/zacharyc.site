---
title: Photography
description: Photography
id: photography
layout: default.webc
---
<section class="page-section" aria-label="Latest Collections">
  <h2>Latest Collections</h2>
  <div class="cards small" data-nosnippet>
    {%- for collection in collections.collection | reverse | limit(4) -%}
    <a class="card" href="{{ collection.url }}" aria-label="{{ collection.data.title }}">
      <img src="/images/{{ collection.data.img }}" alt="{{ collection.data.title }} Collection Image">
      <h3>{{ collection.data.title }}</h3>
      <p>{{ collection.data.numberofphotos }} Photos</p>
      <span class="button">View</span>
    </a>
    {%- endfor -%}
  </div>
  <a class="button center" href="/photography/collections/">More Collections</a>
</section>

<section class="page-section" aria-label="Featured Photos">
  <h2>Featured Photos</h2>
  <div class="gallery" aria-label="Gallery">
    {%- for photo in collections.photo | sort('featuredOrder') -%}
    {% if photo.data.featured %}
    <a class="photo" href="/photography/{{ photo.data.id }}/">
      <img src="/images/{{ photo.data.src }}" alt="{{ photo.data.alt }}">
    </a>
    {% endif %}
    {%- endfor -%}
  </div>
</section>
